<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/constraint_sale_product"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginTop="8dp"
        android:background="@color/white"
        android:visibility="visible"
        app:layout_constraintDimensionRatio="h,375:158"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <TextView
            android:id="@+id/tv_title_sale_product"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="19dp"
            android:layout_marginTop="6dp"
            android:drawablePadding="1dp"
            android:text="@string/title_sale_product"
            android:textColor="#2D2C2C"
            android:textStyle="bold"
            android:visibility="visible"
            app:drawableEndCompat="@drawable/ic_sale_tag"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/tv_view_all_sale_product"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="12dp"
            android:layout_marginEnd="19dp"
            android:layout_marginBottom="5dp"
            android:text="@string/view_all_product"
            android:textSize="12sp"
            android:visibility="visible"
            app:layout_constraintBottom_toTopOf="@+id/prv_sale_product_3"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <com.example.drawlayout_customview.custom_view.ProductView
            android:id="@+id/prv_sale_product_4"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_marginStart="13dp"
            android:layout_marginTop="6dp"
            android:layout_marginBottom="6dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintDimensionRatio="83:121"
            app:layout_constraintEnd_toStartOf="@+id/prv_sale_product_1"
            app:layout_constraintHorizontal_bias="0.5"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/tv_title_sale_product" />

        <com.example.drawlayout_customview.custom_view.ProductView
            android:id="@+id/prv_sale_product_1"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_marginStart="8dp"
            app:layout_constraintBottom_toBottomOf="@+id/prv_sale_product_4"
            app:layout_constraintEnd_toStartOf="@+id/prv_sale_product_2"
            app:layout_constraintHorizontal_bias="0.5"
            app:layout_constraintStart_toEndOf="@+id/prv_sale_product_4"
            app:layout_constraintTop_toTopOf="@+id/prv_sale_product_4" />

        <com.example.drawlayout_customview.custom_view.ProductView
            android:id="@+id/prv_sale_product_2"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_marginStart="8dp"
            app:layout_constraintBottom_toBottomOf="@+id/prv_sale_product_1"
            app:layout_constraintEnd_toStartOf="@+id/prv_sale_product_3"
            app:layout_constraintHorizontal_bias="0.5"
            app:layout_constraintStart_toEndOf="@+id/prv_sale_product_1"
            app:layout_constraintTop_toTopOf="@+id/prv_sale_product_1" />

        <com.example.drawlayout_customview.custom_view.ProductView
            android:id="@+id/prv_sale_product_3"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_marginStart="8dp"
            android:layout_marginEnd="13dp"
            app:layout_constraintBottom_toBottomOf="@+id/prv_sale_product_2"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.5"
            app:layout_constraintStart_toEndOf="@+id/prv_sale_product_2"
            app:layout_constraintTop_toTopOf="@+id/prv_sale_product_2" />

    </androidx.constraintlayout.widget.ConstraintLayout>
</androidx.constraintlayout.widget.ConstraintLayout>